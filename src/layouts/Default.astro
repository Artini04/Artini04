---
import "@styles/reset.scss"
import "@styles/base.scss"

import Head from "@components/Head.astro"
import PersistFooter from "@components/persist/PersistFooter.astro"

interface Props {
  title: string
}

const { title } = Astro.props
---

<html lang="jp">
  <head>
    <Head />
    <link
      rel="icon"
      type="image/png"
      href="/Artini04/avatar-modified.png"
    />

    <title>{title}</title>
  </head>

  <body>
    <slot />
    <PersistFooter />
  </body>
</html>
