---
import { Image } from "astro:assets"
import SectionBase from "@components/base/SectionBase.astro"

const avatarSize = {
  width: 100,
  height: 100
}
---

<SectionBase additionalClass="section-home">
  <div class="section-home__content">
    <div class="section-header__avatar">
      <Image
        class:list={"section-header__avatar-image"}
        src="/Artini04/avatar-modified.png"
        alt="Avatar"
        width={avatarSize.width}
        height={avatarSize.height}
        loading="eager"
      />
    </div>

    <div class="section-home__description">
      <p>@artin04</p>
      <p>🕷️🕸️クモです</p>
      <p>日本語の勉強中</p>
    </div>
  </div>
</SectionBase>

<style lang="scss">
  .section-home__content {
    display: flex;
    flex-flow: row wrap;
    gap: 1em;

    place-items: center;
  }
</style>
