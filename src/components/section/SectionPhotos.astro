---
import { Image } from "astro:assets"
import SectionBase from "@components/base/SectionBase.astro"

const imageSet = [
  {
    src: "/Artini04/cat-1.webp",
    alt: "海辺の猫",
    caption: "海辺の猫"
  },
  {
    src: "/Artini04/cat-2.webp",
    alt: "猫",
    caption: "市の猫📍ケソン市、フィリピン"
  },
  {
    src: "/Artini04/cat-nap.webp",
    alt: "昼寝猫",
    caption: "昼寝猫📍UPタウンセンター"
  },
  {
    src: "/Artini04/cat-fat.webp",
    alt: "デブ猫",
    caption: "デブ猫📍UPタウンセンター"
  },
  {
    src: "/Artini04/cat-lazy.webp",
    alt: "なまけねこ",
    caption: "なまけねこ"
  },
  {
    src: "/Artini04/cat-wet.webp",
    alt: "猫",
    caption: "猫"
  },
  {
    src: "/Artini04/chicken-2.webp",
    alt: "鶏",
    caption: "鶏"
  }
]
---

<SectionBase additionalClass="section-photos">
  <div class="section-photos__header">
    <h1>写真</h1>
  </div>

  <div class="section-photos__grid">
    {
      imageSet.map(({ src, alt, caption }) => (
        <figure class="section-photos__figure">
          <Image
            class:list={["section-photos__figure-photo"]}
            src={src}
            alt={alt}
            loading={"lazy"}
            width={300}
            height={300}
          />

          <figcaption class="section-photos__figure-caption">
            <span>{caption ?? alt}</span>
          </figcaption>
        </figure>
      ))
    }
  </div>
</SectionBase>

<style lang="scss">
  @use "@styles/modules/utilities" as util;

  .section-photos__grid {
    // Component Properties
    --_grid-item-min-size: 350px;

    display: grid;
    grid-template-columns: repeat(
      auto-fit,
      minmax(min(var(--_grid-item-min-size), 100%), 1fr)
    );
    gap: 1em;
  }

  .section-photos__figure {
    & > * + * {
      margin-block-start: 0.4em;
    }

    &-photo {
      width: 100%;
      object-fit: cover;
      border-radius: var(--shared-border-radius);
    }

    &-caption {
    }
  }
</style>
