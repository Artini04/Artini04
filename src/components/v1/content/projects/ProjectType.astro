---
interface Props {
	label: string
}

const { label } = Astro.props
---

<div class="project-type">
	<p>{label}</p>
</div>

<style lang="scss">
	.project-type {
		font-size: var(--global-text-size--tiny);
		color: var(--global-text-color--dim);

		padding: 0.2em 0.6em 0.1em;
		background-color: hsl(0, 0%, 60%, 0.1);
		border-radius: var(--global-border-radius);

		user-select: none;
	}
</style>
