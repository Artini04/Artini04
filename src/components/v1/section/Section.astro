---
interface Props {
	class?: string
	id?: string
}

const { class: classNames = "", id } = Astro.props
---

<section id={id} class:list={["section", ...classNames.split(" ")]}>
	<slot />
</section>

<style lang="scss" is:global>
	.section > div[class*="heading"] {
		& > * + * {
			margin-block-start: 0.6em;
		}
	}

	.section div[class*="heading-title"] {
		display: flex;
		flex-flow: row wrap;
		gap: 0.5ch 1ch;

		place-items: flex-end;

		h2,
		h3 {
			line-height: 1;
		}

		h2 {
			font-size: 2em;
			font-family: "Hina Mincho";
			color: lightcoral;
			margin-block-end: 0.15em;
		}

		h3 {
			font-size: 1.8em;
		}
	}
</style>

<style lang="scss">
	@use "@styles/modules/layouts";

	.section {
		@extend %grid;

		scroll-margin-block-start: 1em;
	}
</style>
